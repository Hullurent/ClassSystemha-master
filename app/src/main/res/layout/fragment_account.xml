<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AccountFragment">

    <!-- TODO: Update blank fragment fragment_start -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@drawable/lift_on_touch"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_below="@id/account_img"
            android:id="@+id/account_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/account_img"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ali_head"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/pad"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/account_img"
                android:background="@color/app_bg"/>
            <ImageView
                android:id="@+id/message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:src="@drawable/message"
                android:layout_alignStart="@+id/pad"
                android:layout_below="@+id/pad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/message"
                android:layout_toEndOf="@+id/message"
                android:text="我的资料"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/message"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="350dp"
                android:src="@drawable/arrow" />
            <TextView
                android:id="@+id/padding0"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/message"
                android:background="@color/app_bg"/>
            <ImageView
                android:id="@+id/setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:src="@drawable/setting"
                android:layout_alignStart="@+id/padding0"
                android:layout_below="@+id/padding0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/setting"
                android:layout_toEndOf="@+id/setting"
                android:text="软件设置"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/setting"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="350dp"
                android:src="@drawable/arrow" />
            <ImageView
                android:id="@+id/invite"
                android:layout_width="40dp"
                android:layout_height="40sp"
                android:layout_gravity="start"
                android:src="@drawable/invite"
                android:layout_alignStart="@+id/setting"
                android:layout_below="@+id/setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/invite"
                android:layout_toEndOf="@+id/invite"
                android:text="推荐给好友"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/invite"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="350dp"
                android:src="@drawable/arrow" />
            <TextView
                android:id="@+id/padding"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/invite"
                android:background="@color/app_bg"/>
            <ImageView
                android:id="@+id/suggestion"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="start"
                android:src="@drawable/suggestion"
                android:layout_alignStart="@+id/padding"
                android:layout_below="@+id/padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/suggestion"
                android:layout_toEndOf="@+id/suggestion"
                android:text="建议"
                android:textSize="20sp"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/suggestion"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="350dp"
                android:src="@drawable/arrow" />
            <ImageView
                android:id="@+id/provider"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="start"
                android:src="@drawable/provider"
                android:layout_alignStart="@+id/suggestion"
                android:layout_below="@+id/suggestion"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/provider"
                android:layout_toEndOf="@+id/provider"
                android:text="关于我们"
                android:textSize="20sp"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/provider"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="350dp"
                android:src="@drawable/arrow" />
    </RelativeLayout>>
    </android.support.v7.widget.CardView>
</ScrollView>